<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}"
      onsubmit="return confirm('Voulez-vous vraiment supprimer ce lien ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button type="submit" class="{{ class|default('show-delete-btn') }}">Supprimer</button>
</form>
