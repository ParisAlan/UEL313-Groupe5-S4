{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <body class="admin-page">
    <h1 class="admin-title">Liens index</h1>

    <a class="btn-create admin-link" href="{{ path('app_liens_new') }}">Create new</a>
    <br>

    <table class="admin-table">
        <thead>
        <tr>
            <th class="admin-th">Id</th>
            <th class="admin-th">URL</th>
            <th class="admin-th">Titre</th>
            <th class="admin-th">Description</th>
            <th class="admin-th">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for lien in liens %}
            <tr class="admin-row">
                <td class="admin-td">{{ lien.id }}</td>
                <td class="admin-td">{{ lien.lienUrl }}</td>
                <td class="admin-td">{{ lien.lienTitre }}</td>
                <td class="admin-td">{{ lien.lienDesc }}</td>
                <td class="admin-td">
                    <a class="btn-show" href="{{ path('app_liens_show', {'id': lien.id}) }}">Montrer</a>
                    <a class="btn-edit" href="{{ path('app_liens_edit', {'id': lien.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="no-records" colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1 class="admin-title">User index</h1>

    <a class="btn-create admin-link" href="{{ path('app_user_new') }}">Create new</a>
    <br>

    <table class="admin-table">
        <thead>
        <tr>
            <th class="admin-th">Id</th>
            <th class="admin-th">Username</th>
            <th class="admin-th">Roles</th>
            <th class="admin-th">Password</th>
            <th class="admin-th">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="admin-row">
                <td class="admin-td">{{ user.id }}</td>
                <td class="admin-td">{{ user.username }}</td>
                <td class="admin-td">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="admin-td">{{ user.password }}</td>
                <td class="admin-td">
                    <a class="btn-show" href="{{ path('app_user_show', {'id': user.id}) }}">Montrer</a>
                    <a class="btn-edit" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="no-records" colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</body>
    <style>
        body.admin-page {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: #333;
        }

        h1.admin-title {
            text-align: center;
            color: #444;
            margin: 20px 0 10px 0;
        }

        a.admin-link {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }

        a.admin-link:hover {
            text-decoration: underline;
        }

        a.btn-create {
            display: inline-block;
            margin-bottom: 20px;
            padding: 8px 15px;
            background-color: #e0e0e0;
            color: #000;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        a.btn-create:hover {
            background-color: #2C3E50;
            color: #fff;
            transform: scale(1.05);
            text-decoration: none;
        }

        table.admin-table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        table.admin-table th.admin-th,
        table.admin-table td.admin-td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        table.admin-table th.admin-th {
            background-color: #f1f1f1;
            font-weight: 600;
        }

        table.admin-table tr.admin-row:hover {
            background-color: #f9f9f9;
        }

        a.btn-show {
            display: inline-block;
            padding: 8px 15px;
            background-color: #e0e0e0;
            color: #000;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        a.btn-show:hover {
            background-color: #2C3E50;
            color: #fff;
            transform: scale(1.05);
            text-decoration: none;
        }

        a.btn-edit {
            display: inline-block;
            padding: 8px 15px;
            background-color: #e0e0e0;
            color: #000;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        a.btn-edit:hover {
            background-color: #2C3E50;
            color: #fff;
            transform: scale(1.05);
            text-decoration: none;
        }

        td.no-records {
            text-align: center;
            font-style: italic;
            color: #888;
            padding: 20px 0;
        }
    </style>

{% endblock %}

