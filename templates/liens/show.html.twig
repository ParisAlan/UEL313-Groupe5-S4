{% extends 'base.html.twig' %}

{% block title %}Détails du lien{% endblock %}

{% block body %}
<h1 style="text-align: center">Détails du lien</h1>

<div class="show-container">
    <h2 class="show-title">{{ lien.lienTitre }}</h2>
    <p class="show-desc">{{ lien.lienDesc }}</p>

    <div class="show-info">
        <p><strong>URL:</strong> <a href="{{ lien.lienUrl }}" target="_blank" class="show-link">{{ lien.lienUrl }}</a></p>
        <p><strong>ID:</strong> {{ lien.id }}</p>
    </div>

    <div class="show-buttons">
        <a href="{{ path('app_liens_index') }}" class="show-btn">Retour à la liste</a>
        <a href="{{ path('app_liens_edit', {'id': lien.id}) }}" class="show-btn">Modifier</a>

        {# Delete form avec bouton stylisé #}
        {{ include('liens/_delete_form.html.twig', {
            'button_class': 'show-btn show-delete'
        }) }}
    </div>
</div>
{% endblock %}
