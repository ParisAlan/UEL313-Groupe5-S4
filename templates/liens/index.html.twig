{% extends 'base.html.twig' %}

{% block title %}Liens index{% endblock %}

{% block body %}
    <h1>Liens index</h1>

    {% if tag_actif is defined %}
        <h2>Résultats pour le tag : <span class="badge bg-info">#{{ tag_actif.name }}</span></h2>
        <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-secondary mb-3">Voir tous les liens</a>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>titre</th>
                <th>description</th>
                <th>url</th>
                <th>Tags</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lien in liens %}
            <tr>
                <td>{{ lien.id }}</td>
                <td>{{ lien.lienTitre }}</td>
                <td>{{ lien.lienDesc }}</td>
                <td>{{ lien.lienUrl }}</td>
                <td>
                    {% for tag in lien.motcles %}
                        <a href="{{ path('app_liens_par_tag', {'id': tag.id}) }}" class="badge bg-primary text-decoration-none">
                            #{{ tag.name }}
                        </a>
                    {% else %}
                        <small class="text-muted">Aucun tag trouver</small>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_liens_show', {'id': lien.id}) }}">show</a>
                    <a href="{{ path('app_liens_edit', {'id': lien.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de tags trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_liens_new') }}">Create new</a>
{% endblock %}
